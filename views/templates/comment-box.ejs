<div class="comment-box">
  <p class="comment-box-title">Add a Thread:</p>
  <form id="new-thread-form">
    <input
      type="hidden"
      name="post_id"
      value="<%= typeof post_id !== 'undefined' ? post_id : '' %>"
    />
    <textarea
      name="comment"
      placeholder="Write your thread..."
      class="comment-textarea"
    ></textarea>
    <div class="comment-form-actions">
      <button type="button" onclick="submitNewThread()" class="comment-submit">
        Post Thread
      </button>
      <button
        type="button"
        onclick="document.getElementById('new-thread-form').reset()"
        class="comment-cancel"
      >
        Cancel
      </button>
    </div>
  </form>
</div>

<style>
  .comment-box {
    background: #f8f9fa;
    border-radius: 6px;
    padding: 0.75rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .comment-box-title {
    font-size: 1rem;
    font-weight: 600;
    margin-top: 0;
    margin-bottom: 0.75rem;
    color: #333;
  }

  .comment-textarea {
    width: 100%;
    min-height: 80px;
    padding: 0.5rem;
    border-radius: 4px;
    border: 1px solid #ddd;
    font-family: inherit;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    resize: vertical;
  }

  .comment-form-actions {
    display: flex;
    gap: 0.5rem;
  }

  .comment-form-actions button {
    padding: 0.4rem 0.8rem;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    font-weight: 500;
    font-size: 0.85rem;
  }

  .comment-submit {
    background: #667eea;
    color: white;
  }

  .comment-submit:hover {
    background: #5a67d8;
  }

  .comment-cancel {
    background: #6c757d;
    color: white;
  }

  .comment-cancel:hover {
    background: #5a6268;
  }
</style>
