<%- include('templates/header') %>

<style>
  .calendar-week-container {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .calendar-week-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e0e0e0;
  }

  .timezone-indicator {
    font-size: 0.9rem;
    color: #666;
    font-weight: 500;
  }

  .calendar-week-grid {
    display: grid;
    grid-template-columns: 80px repeat(7, 1fr);
    gap: 1px;
    border: 1px solid #e0e0e0;
    background: #e0e0e0;
  }

  .time-slot-header {
    background: white;
    padding: 0.5rem;
    font-weight: 600;
    color: #333;
    text-align: center;
    font-size: 0.9rem;
  }

  .day-header {
    background: white;
    padding: 1rem 0.5rem;
    text-align: center;
    font-weight: 600;
    border-bottom: 2px solid #e0e0e0;
  }

  .day-name {
    font-size: 0.85rem;
    color: #666;
    text-transform: uppercase;
    margin-bottom: 0.25rem;
  }

  .day-number {
    font-size: 1.5rem;
    color: #333;
    position: relative;
    display: inline-block;
  }

  .day-number.today {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background-color: #2196f3;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }

  .time-slot-cell {
    background: white;
    padding: 0.25rem;
    font-size: 0.85rem;
    color: #666;
    text-align: right;
    padding-right: 0.5rem;
    border-right: 1px solid #f0f0f0;
  }

  .day-time-cell {
    background: white;
    min-height: 60px;
    border-right: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
    position: relative;
  }

 

  .day-time-cell:hover {
    background: #f9f9f9;
  }

  .day-time-cell-has-events {
    background: #f9f9f9;
    min-height: 60px;
    border-right: 1px solid #f0f0f0;
    border-bottom: 1px solid #f0f0f0;
    position: relative;
  }

  /* Empty first cell in top-left corner */
  .calendar-week-grid > .time-slot-header:first-child {
    border-bottom: 2px solid #e0e0e0;
  }
</style>

<div class="calendar-week-container">
  <div class="calendar-week-header">
    <h1>
      Week of <%= dayName %> <%= weekDays[0].dayOfMonth %>, <%= monthName %> <%=
      year %>
    </h1>
    <div class="timezone-indicator"><%= timezoneString %></div>
  </div>

  <div class="calendar-week-grid">
    <!-- Empty corner cell -->
    <div class="time-slot-header"></div>

    <!-- Day headers -->
    <% weekDays.forEach(function(day) { %>
    <div class="day-header">
      <div class="day-name"><%= day.dayName %></div>
      <div class="day-number <%= day.isToday ? 'today' : '' %>">
        <%= day.dayOfMonth %>
      </div>
    </div>
    <% }); %>

    <!-- Time slots and cells -->
    <% timeSlots.forEach(function(timeSlot) { %>
    <!-- Time label -->
    <div class="time-slot-cell"><%= timeSlot.display %></div>

    <!-- Day cells for this time slot -->
    <% weekDays.forEach(function(day) { %>
    <div
      data-slot="<%= JSON.stringify(timeSlot) %>"
      data-event="<%= JSON.stringify(timeSlot.events[0]) %>"
      <% if (timeSlot.events && timeSlot.events.length > 0) { %>
        class="day-time-cell-has-events"
      <% } else { %>
        class="day-time-cell"
      <% } %>

      data-day="<%= day.dayOfMonth %>"
      data-hour="<%= timeSlot.hour24 %>"
      data-day-name="<%= day.dayName %>"
      
    >
      <!-- Events will be rendered here later -->
    </div>
    <% }); %> <% }); %>
  </div>
</div>

<script>
  const dayTimeCells = document.querySelectorAll('.day-time-cell-has-events');
  dayTimeCells.forEach(dayTimeCell => {
    const timeSlot = JSON.parse(dayTimeCell.dataset.slot);
    const event = dayTimeCell.dataset.event;
    const day = dayTimeCell.dataset.day;
    const hour = dayTimeCell.dataset.hour;
    const dayName = dayTimeCell.dataset.dayName;
    console.log("timeSlot: ", timeSlot.events[0].dayName, "\ndayName: ", dayName, "\nhour: ", hour);
    if (dayName == timeSlot.events[0].dayName && hour == timeSlot.hour24) {
      dayTimeCell.style.backgroundColor = timeSlot.events[0].colour;
    }
  });
</script>

<%- include('templates/footer') %>
